KafkaServer {
    com.sun.security.auth.module.Krb5LoginModule required
    useKeyTab=true
    storeKey=true
    keyTab="/etc/security/keytabs/broker-{{ tags["region"] }}.keytab"
    principal="kafka/{{inventory_hostname}}@{{ tags["region"] | upper }}.CONFLUENT.IO";
};
